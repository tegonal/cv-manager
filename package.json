{
  "name": "cv-manager",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "dev:mongodb": "env-cmd -f .env.local_mongodb -- yarn run dev",
    "dev:postgres": "env-cmd -f .env.local_postgres -- yarn run dev",
    "dev:sqlite": "env-cmd -f .env.local_sqlite -- yarn run dev",
    "services:start": "docker compose -f docker-compose.dev.yml up -d --remove-orphans && ./scripts/garage-init.sh cv-manager-garage",
    "services:stop": "docker compose -f docker-compose.dev.yml down --remove-orphans",
    "services:destroy": "docker compose -f docker-compose.dev.yml down --volumes --remove-orphans",
    "services:init-s3": "./scripts/garage-init.sh cv-manager-garage",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "migrate:create": "cross-env NODE_OPTIONS=--no-deprecation payload migrate:create",
    "migrate:create:mongodb": "env-cmd -f .env.local_mongodb -- yarn run migrate:create",
    "migrate:create:postgres": "env-cmd -f .env.local_postgres -- yarn run migrate:create",
    "migrate:create:sqlite": "env-cmd -f .env.local_sqlite -- yarn run migrate:create",
    "migrate:create:all": "yarn run migrate:create:postgres && yarn run migrate:create:sqlite",
    "migrate": "cross-env NODE_OPTIONS=--no-deprecation payload migrate",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types && yarn run check",
    "generate:importMap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importMap && yarn run check",
    "standalone-script": "tsx ./src/scripts/standalone-script.ts",
    "check": "eslint . --fix && prettier --write --log-level warn . && tsc --build --noEmit && echo 'âœ“ All checks passed!'",
    "up": "yarn upgrade-interactive",
    "self-update": "yarn set version latest && yarn"
  },
  "engines": {
    "node": "^24"
  },
  "dependencies": {
    "@innovixx/payload-color-picker-field": "^2.0.4",
    "@payloadcms/db-mongodb": "3.70.0",
    "@payloadcms/db-postgres": "3.70.0",
    "@payloadcms/db-sqlite": "3.70.0",
    "@payloadcms/email-nodemailer": "3.70.0",
    "@payloadcms/next": "3.70.0",
    "@payloadcms/richtext-lexical": "3.70.0",
    "@payloadcms/storage-s3": "3.70.0",
    "@payloadcms/ui": "3.70.0",
    "@react-pdf/renderer": "^4.3.1",
    "@tailwindcss/postcss": "^4.1.17",
    "graphql": "^16.12.0",
    "hyphen": "^1.10.6",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.559.0",
    "next": "15.5.7",
    "nodemailer": "^7.0.11",
    "payload": "3.70.0",
    "payload-oauth2": "^1.0.19",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-i18next": "^16.4.1",
    "react-pdf-tailwind": "^3.0.0",
    "sharp": "0.34.5",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/typography": "^0.5.19",
    "@types/hyphen": "^1.6.7",
    "@types/jsdom": "^27.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.3",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "env-cmd": "^11.0.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "15.5.7",
    "eslint-plugin-check-file": "^3.3.1",
    "eslint-plugin-perfectionist": "^4.15.1",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "5.9.3"
  },
  "packageManager": "yarn@4.12.0"
}
